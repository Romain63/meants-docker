{
  "name": "meants-backend",
  "version": "1.0.0",
  "description": "MEANTS backend written in Typescript",
  "main": "index.js",
  "scripts": {
    "update:packages": "ncu -u && ncu -a && npm update",
    "check": "npm-check --skip-unused",
    "preinstall": "npm i -g nodemon rimraf npm-run-all npm-check",
    "start": "npm-run-all -s clean build start:simple",
    "start:simple": "node .",
    "start:dev": "npm-run-all -s clean build -p watch:*",
    "start:debug": "npm-run-all -s clean build -p watch:* debug",
    "clean": "npm-run-all -p clean:*",
    "clean:dist": "rimraf dist",
    "clean:cov": "rimraf coverage",
    "debug": "node-debug",
    "build": "npm-run-all -s build:ts build:swagger",
    "build:ts": "tsc",
    "build:swagger": "node ./dist/tasks/swagger.js",
    "watch:ts": "tsc --watch",
    "watch:node": "nodemon --debug --delay 2.5",
    "lint": "tslint ./src/{,**/}*.ts",
    "pretest": "npm-run-all -s clean build",
    "test": "npm-run-all -s test:cov test:cov:remap",
    "test:api": "mocha dist/tests/api/*.spec.js -R spec --bail",
    "test:unit": "mocha dist/tests/unit/*.spec.js -R spec --bail",
    "test:cov": "istanbul cover node_modules/mocha/bin/_mocha -- dist/**/*.spec.js -R spec --bail",
    "test:cov:remap": "npm-run-all test:cov:remap:*",
    "test:cov:remap:html": "remap-istanbul -i coverage/coverage.json -o coverage/lcov-report -t html",
    "test:cov:remap:loc": "remap-istanbul -i coverage/coverage.json -o coverage/lcov.info -t lcovonly"
  },
  "keywords": [
    "MongoDB",
    "Express",
    "Nodejs",
    "Typescript",
    "REST"
  ],
  "author": "ian.raffin@gmail.com",
  "license": "MIT",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "class-validator": "^0.7.3",
    "compression": "^1.7.1",
    "config": "1.28.1",
    "cors": "^2.8.4",
    "es6-shim": "^0.35.3",
    "express": "^4.16.3",
    "express-ping": "^1.4.0",
    "express-winston": "2.4.0",
    "glob": "^7.1.2",
    "iso-3166-country-list": "^0.1.2",
    "js-yaml": "3.10.0",
    "jsonwebtoken": "8.1.0",
    "mongodb": "2.2.33",
    "multer": "^1.3.0",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "source-map-support": "0.5.0",
    "swagger-client": "3.3.3",
    "swagger-jsdoc": "1.9.7",
    "swagger-tools": "^0.10.3",
    "ts-node": "3.3.0",
    "twilio": "^3.14.0",
    "typedi": "0.4.3",
    "underscore": "^1.8.3",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "0.0.35",
    "@types/config": "0.0.33",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.0.39",
    "@types/glob": "^5.0.33",
    "@types/js-yaml": "3.10.0",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/mongodb": "2.2.15",
    "@types/multer": "1.3.6",
    "@types/node": "8.0.51",
    "@types/passport": "^0.4.4",
    "@types/passport-facebook": "2.1.8",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "1.0.33",
    "@types/reflect-metadata": "0.0.5",
    "@types/underscore": "^1.8.5",
    "@types/winston": "2.3.7",
    "chai": "^4.1.2",
    "codeclimate-test-reporter": "^0.5.0",
    "codelyzer": "4.0.1",
    "istanbul": "^0.4.5",
    "mocha": "4.0.1",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "remap-istanbul": "^0.9.5",
    "rimraf": "^2.6.2",
    "ts-helpers": "^1.1.2",
    "tslint": "5.8.0",
    "typescript": "2.4.2"
  }
}
